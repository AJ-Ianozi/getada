   function OS return OSs is (MacOS);
   function Arch return Archs is (aarch64);

   function Init_Platform return Platform is
      Result : constant Platform := (OS => OS, Arch => Arch);
   begin
      return Result;
   end Init_Platform;
end Local_Settings;
